{{!
    @template local/accessibility
    Displays enabled widgets for admin page

    Context variables required for this template:
    * widgets strClass[] - widget records
    * baseurl string - base URL

    Example context (json):
    {
        "widgets": [
            {
                "id": 1,
                "displayname": "Widget Name",
                "baseurl": "https://my.moodle/local/accessibility/admin/manageenabledwidgets.php"
            }
        ]
    }
}}
<table class="table table-hover col-12 col-md-6">
    <thead>
        <tr>
            <th>{{#str}} widget, local_accessibility {{/str}}</th>
            <th>{{#str}} action {{/str}}</th>
        </tr>
    </thead>
    <tbody>{{#widgets}}
        <tr>
            <td>{{displayname}}</td>
            <td>
                <a href="{{baseurl}}?sesskey={{sesskey}}&id={{id}}&action=moveup"><i class="fa fa-arrow-up"></i></a>
                <a href="{{baseurl}}?sesskey={{sesskey}}&id={{id}}&action=movedown"><i class="fa fa-arrow-down"></i></a>
                <a href="{{baseurl}}?sesskey={{sesskey}}&id={{id}}&action=disable"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    {{/widgets}}</tbody>
</table>
